# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*.{js,jsx,ts,tsx}]
max_line_length = 130
quote_type = double
semi = true

[*.{html,css,yml,yaml}]
indent_style = space
indent_size = 2
