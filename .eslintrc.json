{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "next/core-web-vitals",
        "xo",
        "plugin:react/recommended",
        "prettier"
    ],
    "overrides": [
        {
            "extends": ["xo-typescript", "prettier"],
            "files": ["*.ts", "*.tsx"],
            "rules": {
                "import/first": "error",
                "import/no-duplicates": "error",
                "no-duplicate-imports": "error",
                "no-unused-vars": ["error"],
                "react/react-in-jsx-scope": "off"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react", "import"],
    "rules": {}
}
